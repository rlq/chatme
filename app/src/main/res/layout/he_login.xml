<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@drawable/he_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="@drawable/he_login_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:src="@drawable/he_logo" />
        </RelativeLayout>
        
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/login_accountedit_bg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="账　号:"
                    android:textColor="@color/color_black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/login_account_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
        
                    android:background="@drawable/he_text2_bg"
                    android:hint="请输入账号"
                    android:imeOptions="actionDone"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/color_hint"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/login_arrow_btn"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/he_arrow"
                    android:layout_alignBottom="@+id/login_account_et"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

          </LinearLayout>  
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/he_text2_bg"
                    android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
                    android:hint="请输入密码"
                    android:imeOptions="actionDone"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/color_hint"
                    android:textSize="15dp" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/login_display_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    style="@style/MyCheckBox"
                    android:text="显示密码"
                    android:textColor="@color/color_gray"
                   />

                <Button
                    android:id="@+id/login_changepwd_btn"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="175dp"
                    android:layout_marginRight="25dp"
                    android:background="@android:color/transparent"
                    android:text="修改密码"
                    android:textSize="15dp"
                    android:textColor="@color/color_blue" />

            </LinearLayout>
  
        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
         android:layout_marginLeft="25dp"
          android:layout_marginTop="3dp"
          android:orientation="horizontal" >   

              <Button
                  android:id="@+id/login_register_btn"
                  android:layout_width="130dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:background="@drawable/he_clickoth_selector"
                  android:text="注 册"
                  android:textColor="@color/color_white" />

              <Button
                  android:id="@+id/login_login_btn"
                  android:layout_width="130dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="70dp"
                  android:layout_marginRight="15dp"
                  android:background="@drawable/he_click_return_selector"
                  android:focusable="false"
                  android:text="登  录 "
                  android:textColor="@color/color_white" />
			 
         </LinearLayout>
		   
		    <!--  <Button
		          android:id="@+id/login_change_btn"
		          android:layout_width="100dp"
		          android:layout_height="wrap_content"
		          android:background="@android:color/transparent"
		          android:text="找回密码"
		          android:layout_marginLeft="268dp"
		           android:layout_marginTop="6dp"
		          android:textColor="@color/TextColorYellow"
		          android:textSize="15dp"
		          /> --> 
    </LinearLayout>

</LinearLayout>