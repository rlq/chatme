<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#eee"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_friendName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="请输入好友帐号"
        android:gravity="center_vertical"
        android:textSize="15dp"
       android:background="@drawable/he_friendcircle_item_normal"
        android:layout_toLeftOf="@+id/add_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/add_btn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/he_click_selector"
        android:text="添加好友"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_white"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/friend_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_friendName">

    </ListView>

</RelativeLayout>